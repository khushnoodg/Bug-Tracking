<%= form_with(model: bugz) do |form| %>
  <% if bugz.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(bugz.errors.count, "error") %> prohibited this bugz from being saved:</h2>

      <ul>
        <% bugz.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>
  <div class="field">
    <%= form.label :image %>
    <%= form.file_field :image %>
  </div>
  <div>
    <%= form.label :deadline, style: "display: block" %>
    <%= form.date_field :deadline %>
  </div>
  <div class="field">
    <%= form.label :b_type %>
    <%= form.select :b_type, ['feature', 'bug'] %>
  </div>

  <div class="field">
    <%= form.label :status %>
    <%= form.select :status, ['new', 'started', 'completed', 'resolved'] %>
  </div>

  <div>
    <%= form.label :project_id, style: "display: block" %>
    <%= form.collection_select :project_id, Project.all, :id, :name, prompt: "Select a Project" %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
